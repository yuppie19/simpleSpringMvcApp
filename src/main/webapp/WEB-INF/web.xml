<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>spring</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/spring-servlet.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>spring</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>fuckerServlet</servlet-name>
        <servlet-class>servlets.FuckerServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>fuckerServlet</servlet-name>
        <url-pattern>/fuck</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>anotherServlet</servlet-name>
        <servlet-class>servlets.AnotherServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>anotherServlet</servlet-name>
        <url-pattern>/fuck2</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>listeners.ContextListener</listener-class>
    </listener>
    
    <listener>
        <listener-class>listeners.ContextAttributeListener</listener-class>
    </listener>
    
    <listener>
        <listener-class>listeners.SessionListener</listener-class>
    </listener>
    
    <listener>
        <listener-class>listeners.RequestListener</listener-class>
    </listener>

    <filter>
        <filter-name>preProcessingFilter</filter-name>
        <filter-class>filters.PreProcessingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>preProcessingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <display-name>My spring mvc from scratch</display-name>
</web-app>